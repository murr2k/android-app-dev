<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">
    
    <item android:duration="2000">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#1a237e"
                android:centerColor="#3949ab"
                android:endColor="#7c4dff"
                android:type="linear" />
        </shape>
    </item>
    
    <item android:duration="2000">
        <shape android:shape="rectangle">
            <gradient
                android:angle="225"
                android:startColor="#311b92"
                android:centerColor="#5e35b1"
                android:endColor="#9c27b0"
                android:type="linear" />
        </shape>
    </item>
    
    <item android:duration="2000">
        <shape android:shape="rectangle">
            <gradient
                android:angle="315"
                android:startColor="#1a237e"
                android:centerColor="#3f51b5"
                android:endColor="#7986cb"
                android:type="linear" />
        </shape>
    </item>
    
    <item android:duration="2000">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#283593"
                android:centerColor="#3949ab"
                android:endColor="#5c6bc0"
                android:type="linear" />
        </shape>
    </item>
    
</animation-list>